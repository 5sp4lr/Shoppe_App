<!-- Page Content -->
    <div class="jumbotron">
      <div class="container">
        <h1>Zone-Tag</h1>
        <p>Shop online in the beautiful island of Saint Lucia!</p>
        <a href="#"><button class="btn btn-success">Learn More</button></a>
      </div>
    </div>

 

    <div class="container" id="Home-con">

        <div class="row">

            <div class="col-md-8">

                <div class="row carousel-holder col-md-12">

                    <div class="col-md-11">
                        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                                <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                                <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                            </ol>
                            <div class="carousel-inner">
                                <div class="item active">
                                    <img class="slide-image" src="http://placehold.it/800x300" alt="">
                                </div>
                                <div class="item">
                                    <img class="slide-image" src="http://placehold.it/800x300" alt="">
                                </div>
                                <div class="item">
                                    <img class="slide-image" src="http://placehold.it/800x300" alt="">
                                </div>
                            </div>
                            <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                                <span class="glyphicon glyphicon-chevron-left"></span>
                            </a>
                            <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                                <span class="glyphicon glyphicon-chevron-right"></span>
                            </a>
                        </div>
                    </div>

                </div>

            <% @products.each do |category, products| %>
              <h3><%= category.name %></h3>
              <ul class="list-inline">
                <% products.each do |product| %>
                <div class="row">

                    <div class="col-sm-4 col-lg-4 col-md-4">
                        <div class="thumbnail">
                             <%= image_tag product.default_image.path, :width => '320px', :height => '150px' %> 
                            <div class="caption">
                                <h4 class="pull-right"><%= number_to_currency product.price %></h4>
                                <h4><%= link_to product.name, product_path(product.permalink)%></h4>
                                </h4>
                               <p><%= product.short_description %></p>
                            </div>
                            <div class="ratings">
                                <p class="pull-right">15 reviews</p>
                                <p>
                                    <span class="glyphicon glyphicon-star"></span>
                                    <span class="glyphicon glyphicon-star"></span>
                                    <span class="glyphicon glyphicon-star"></span>
                                    <span class="glyphicon glyphicon-star"></span>
                                    <span class="glyphicon glyphicon-star"></span>
                                </p>
                            </div>
                        </div>
                    </div>
                  <% end %>
                  <ul>
                  <% end %>
                 
    <!-- /.container -->

    <div class="container">

        <hr>

        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; Your Website 2014</p>
                </div>
            </div>
        </footer>

    </div>